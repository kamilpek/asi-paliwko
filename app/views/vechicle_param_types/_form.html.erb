<%= simple_form_for(@vechicle_param_type) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <div class="input-group">
      <span class="input-group-addon">Nazwa</span>
       <%= f.text_field :name, placeholder:"Nazwa", :autofocus => true, class:"form-control", required: true %><br>
    </div><br>
    <div class="input-group">
      <span class="input-group-addon">Priorytet</span>
       <%= f.number_field :priority, value:1, min:1, max:2, class:"form-control", required: true %><br>
    </div><br>
    <div class="input-group">
      <span class="input-group-addon">Status</span>
       <%= f.number_field :status, value:1, min:0, max:1, class:"form-control", required: true %><br>
    </div>
  </div><br>

  <div align="center">
    <%= f.submit :Zatwierdź, class:"btn btn-success" %>
    <%= link_to 'Lista rodzajów parametrów', vechicle_param_types_path, class:"btn btn-primary" %>
  </div>
<% end %>
