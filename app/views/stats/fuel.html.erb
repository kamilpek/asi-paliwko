<% content_for :title, "Statystyki tankowań" %>

<div class="container">

<h1 class=page-header>Statystyki tankowań</h1>

<div class="row">
  <div class="col-md-12">
    <h5>Koszty tankowań według samochodów [zł]</h5>
    <%= bar_chart @vechicle_fuels.joins(:vechicle).group(:plates).sum(:cost) %>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <h5>Koszty tankowań według samochodów [l]</h5>
    <%= bar_chart @vechicle_fuels.joins(:vechicle).group(:plates).sum(:value) %>
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <h5>Wszystkie tankowania kosztów z podziałem na samochody</h5>
    <%= pie_chart @vechicle_fuels.joins(:vechicle).group('vechicles.plates').count %>
  </div>
  <div class="col-md-6">
    <h5>Udział samochodów w tankowaniach</h5>
    <%= pie_chart @vechicle_fuels.joins(:vechicle).group(:plates).sum(:cost) %>
  </div>
</div>

</div>
<br>
